{
	"compilerOptions": {
		"sourceMap": true,
		"jsx": "react-jsx",
		"lib": [
			"ES2019",
			"DOM"
		],
		"resolveJsonModule": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"target": "es5",
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}